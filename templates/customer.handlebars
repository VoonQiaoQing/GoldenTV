<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
{{> navbar}}
<h1 style="justify-content: center;">Customer Spendings</h1>
<div class="container" style="width: 600px;height:500px">

    <canvas id="myChart" width="50" height="50"></canvas>

</div>

<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: [{{#each label }}
						'{{this}}',
                {{/each}}],
            datasets: [{
                label: 'customer spending',
                data: [
                    {{#each  data}}
						{{this}},
					{{/each}}
					],
            backgroundColor: [
                		'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
                borderColor: [
                   	'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                    borderWidth: 1
        }]
    },
    options: {
        responsive: true,
            plugins: {
            legend: {
                position: 'top',
                    },
            title: {
                display: true,
                    text: 'Customer Details'
            }
        }
    },
        });
</script>