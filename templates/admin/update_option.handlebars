<style>
    body{
        background-color: black;
    }
</style>
<form class="container" method="POST" action="/admin/update_option/{{option.uuid}}">
    <div class="row setup-content" id="step-1">
        <div class="col-xs-12">
            <div class="col-md-12 well text-center">
                <h1> Edit Options</h1>

                <div class="container col-xs-12">
                    <div class="row clearfix">
                        <div class="col-md-12 column">
                            <table class="table table-bordered table-hover" id="tab_logic">
                                <thead>
                                    <tr>

                                        <th class="text-center">
                                            Location
                                        </th>
                                        <th class="text-center">
                                            Date
                                        </th>
                                        <th class="text-center">
                                            Time
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    <tr id='addr0'>

                                        <td>
                                            <input type="text" name='location' value="{{option.location}}"
                                                class="form-control" style="color: black;" />
                                        </td>
                                        <td>
                                            <input type="text" name='date' value="{{option.date}}"
                                                class="form-control" style="color: black;"  />
                                        </td>
                                        <td>
                                            <input type="time" name='time' class="form-control"
                                                value="{{option.time}}"  style="color: black;" />
                                        </td>
                                    </tr>
                                    <tr id='addr1'></tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary pull-right" value="Submit">

            </div>
        </div>
    </div>
</form>