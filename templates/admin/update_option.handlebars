<style>
    body{
        background-color: black;
    }
</style>
{{> navbar}}
<form class="container" method="POST" action="/admin/update_option/{{option.uuid}}">
    <div class="row setup-content" id="step-1">
        <div class="col-xs-12">
            <div class="col-md-12 well text-center">
                <h1> Edit Options</h1>

                <div class="container col-xs-12">
                    <div class="row clearfix">
                        <div class="col-md-12 column">
                            <table class="table table-bordered table-hover" id="tab_logic">
                                <thead>
                                    <tr>

                                        <th class="text-center">
                                            Location
                                        </th>
                                        <th class="text-center">
                                            Date
                                        </th>
                                        <th class="text-center">
                                            Time
                                        </th>
                                        <th class="text-center">
                                            Number of small rooms
                                        </th>
                                        <th class="text-center">
                                            Number of medium rooms
                                        </th>
                                        <th class="text-center">
                                            Number of large rooms
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr id='addr0'>

                                    <td>
                                        <input type="text" name='location' placeholder='E.g. Bishan' class="form-control" style="color: black;" required value="{{option.location}}" />
                                    </td>
                                    <td>
                                        <input type="date" id="datefield" class="form-control" name="date" min="" style="color: black;" value="{{option.date}}">
                                    </td>
                                    <td>
                                        <select name="time" required class="form-control" value="{{option.time}}">
                                            <option style="color: black;">9am to 11.45am</option>
                                            <option style="color: black;">12pm to 2.45pm</option>
                                            <option style="color: black;">3pm to 5.45pm</option>
                                            <option style="color: black;">6pm to 8.45pm</option>
                                            <option style="color: black;">9pm to 11.45pm</option>
                                        </select>
                                    </td>

                                    <td>
                                    <select name="roomtype" required class="form-control" value="{{option.roomtype}}">
                                        <option style="color: black;">Small</option>
                                        <option style="color: black;">Medium</option>
                                        <option style="color: black;">Large</option>
                                        <option style="color: black;">6pm to 8.45pm</option>
                                        <option style="color: black;">9pm to 11.45pm</option>
                                    </select>
                                       </td>
                                    <td>
                                        <input type="number" name='large' class="form-control" style="color: black;" value="{{option.large}}"/>
                                    </td>
                                    </tr>
                                    <tr id='addr1'></tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary pull-right" value="Save">

            </div>
        </div>
    </div>
</form>
<script>
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth() + 1; //January is 0!
    var yyyy = today.getFullYear();
    if (dd < 10) {
        dd = '0' + dd
    }
    if (mm < 10) {
        mm = '0' + mm
    }
    today = yyyy + '-' + mm + '-' + dd;
    document.getElementById("datefield").setAttribute("min", today);
</script>