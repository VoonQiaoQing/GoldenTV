<style>
    body {
        margin-top: 20px;
        background-color: black;
    }

    a {
        color: whitesmoke;
    }

    .button {
        color: white;
    }
</style>
<script>
    // Add , Dlelete row dynamically

    $(document).ready(function () {
        var i = 1;
        $("#add_row").click(function () {
            $('#addr' + i).html("<td> " + (i + 1) + "</td><td><input  name='location' type='text' placeholder='E.g. Bishan' class='form-control input-md'  /> </td><td><input  name='date' type='text' placeholder='e.g. 30 July 2021'  class='form-control input-md'></td><td><input  name='time' type='time' class='form-control input-md'></td>");

            $('#tab_logic').append('<tr id="addr' + (i + 1) + '"></tr>');
            i++;
        });
        $("#delete_row").click(function () {
            if (i > 1) {
                $("#addr" + (i - 1)).html('');
                i--;
            }
        });

    });

</script>

<form class="container" method="POST" action="/admin/option">
    <div class="row setup-content" id="step-1" >
        <div class="col-xs-12">
            <div class="col-md-12 well text-center">
                <h1 > Add Options for customer</h1>

                <div class="container col-xs-12">
                    <div class="row clearfix">
                        <div class="col-md-12 column">
                            <table class="table table-bordered table-hover" id="tab_logic">
                                <thead>
                                    <tr>
                                        <th class="text-center" >
                                            #
                                        </th>
                                        <th class="text-center" >
                                            Location
                                        </th>
                                        <th class="text-center">
                                            Date
                                        </th>
                                        <th class="text-center" >
                                            Time
                                        </th>


                                    </tr>
                                </thead>
                                <tbody>
                                    <tr id='addr0' >
                                        <td>
                                            1
                                        </td>
                                        <td>
                                            <input type="text" name='location' placeholder='E.g. Bishan'
                                                class="form-control" style="color: black;" />
                                        </td>
                                        <td>
                                            <input type="text" name='date' placeholder='E.g. 30 July 2021'
                                                class="form-control" style="color: black;" />
                                        </td>
                                        <td>
                                            <input type="time" name='time' class="form-control" style="color: black;" />
                                        </td>
                                    </tr>
                                    <tr id='addr1'></tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="button">
                        <a id="add_row" class="btn btn-success pull-left">Add More</a>
                        <a id='delete_row' class="btn btn-danger pull-centre">Delete Row</a>
                    </div>

                </div>
                <input type="submit" class="btn btn-primary pull-right" value="Submit">

            </div>
        </div>
    </div>
</form>