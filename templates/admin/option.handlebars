<script>
    // Add , Dlelete row dynamically
    var today = new Date();
        var dd = today.getDate();
        var mm = today.getMonth() + 1; //January is 0!
        var yyyy = today.getFullYear();
        if (dd < 10) {
            dd = '0' + dd
        }
        if (mm < 10) {
            mm = '0' + mm
        }
        today = yyyy + '-' + mm + '-' + dd;

    $(document).ready(function () {
        var i = 1;
        $("#add_row").click(function () {
            $('#addr' + i).html("<td style='color: gold;' > " + (i + 1) + "</td><td><input type='text' required name='location' placeholder='Location' class= 'form-control' style = 'color: black;'' /></td><td><input type='date' required id='date' name='date' style='color: black;'></td> <td><select name = 'time' required class= 'form-control' ><option style='color: black;'>9am to 11.45am</option><option style='color: black;'>12pm to 2.45pm</option><option style='color: black;'>3pm to 5.45pm</option><option style='color: black;'>6pm to 8.45pm</option><option style='color: black;'>9pm to 11.45pm</option></select ></td > <td><select name = 'roomtype' required class= 'form-control' ><option style='color: black;'>Small </option><option style='color: black;'>Medium</option><option style='color: black;'>Large</option></select ></td ><td><input type='number' name='price' class='form-control' style='color: black;' /></td>");
            $('#tab_logic').append('<tr id="addr' + (i + 1) + '"></tr>');
            i++;
        });
        $("#delete_row").click(function () {
            if (i > 1) {
                $("#addr" + (i - 1)).html('');
                i--;
            }
        });
        document.getElementById("date").setAttribute("min", today);

    });
</script>
