{{>navbar}}

<div class="List">
    <div class="ListTable1">
        <div class="blackblock"></div>
        <h1>Rooms Data Table</h1>
        {{!-- <button><a class="nav-link" href="/admin/option">Add more Option</a></button> --}}
        <div class="submit">
            <form action="../room/createrooms">
                <input type="submit" value="Add Rooms" class="btn btn-outline-warning">
            </form>
        </div>
        <table data-toggle="table" data-url="/room/chooseeditroomstable-data" data-search="true" data-pagination="true"
            data-height="600" data-total-field="total" data-silent-sort="false" data-data-field="rows"
            data-side-pagination="server" data-sort-name="location" data-server-sort="true" data-addrbar="true"
            data-show-export="false" data-filter-control="true" data-show-columns="true"
            data-show-columns-toggle-all="true" data-click-to-select="true" data-show-columns-search="true"
            data-minimum-count-columns="2" data-show-pagination-switch="true" data-page-list="[5, 10, 25, 50, all]"
            data-show-custom-view="true" data-show-fullscreen="true" data-show-refresh="true">

            <thead>
                <tr>
                    <th data-field="dateCreated" data-sortable="true">Creation Date</th>
                    <th data-field="dateUpdated" data-sortable="true">Update Date</th>
                    <th data-field="roomname" data-sortable="true">Name</th>
                    <th data-field="roomsize" data-sortable="true">Size</th>
                    <th data-field="roomprice" data-sortable="true">Price</th>
                    <th data-field="roominfo" data-sortable="true">Information</th>
                    <th data-formatter="table_row_image" data-sortable="true">Image</th>
                    <th data-field="location" data-sortable="true">Location</th>
                    <th data-formatter="table_row_edit">Edit</th>
                    {{!-- <th data-field="action" data-formatter="actionFormatter">Action</th> --}}
                </tr>
            </thead>
        </table>
        <div class="blackblock"></div>
    </div>
</div>
</div>
<script>


    function table_row_image(value, row, index) {
        return `
		<img src="/public/uploads/${row.roomimage}" 
        style="width: 160px; height: 120px; padding-bottom: 5px;"
        alt="Norway" class="w3-hover-opacity">
		`;
    }

    /**
     * Formats the action column for each row of data
     **/
    function table_row_edit(value, row, index) {
        return `
		<a href="../room/updateroom/${row.room_uuid}">
			<i class="fa fa-edit"></i>
		</a>

		<a href="../room/deleteroom/${row.room_uuid}">
			<i class="fa fa-trash"></i>
		</a>
		`;
    }
</script>