<h1 class="display-4">Create Rooms</h1>

<form method="POST" action="" name="" enctype="multipart/form-data">

  <div class="form-group">
    <h5>Room Image</h5>
    <input type="file" id="roomimage"
      onchange="document.getElementById('imagedisplay').src = window.URL.createObjectURL(this.files[0])"
      name="roomimage" value="{{roomimage}}" required>

    <img id="imagedisplay" src="/public/img/No-Image-PlaceHolder.png" alt="" class="border img-thumbnail img-fluid"
      style="width: 110px; height: 160px; padding-bottom: 5px;">
  </div>

  <div class="form-group">
    <h5>Room Name</h5>
    <input type="string" name="roomname" class="form-control" value="{{roomname}}" required>
  </div>

  <h5>Room Size</h5>
  <br>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" id="Small" value="Small" name="roomsize" checked>
    <label class="form-check-label" for="Small">Small</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" id="Medium" value="Medium" name="roomsize">
    <label class="form-check-label" for="Medium">Medium</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" id="Large" value="Large" name="roomsize">
    <label class="form-check-label" for="Large">Large</label>
  </div>

  <div class="blackblock"></div>

  <h5>Room Price</h5>
  <div class="form-group">
    <input type="number" placeholder="12" step="any" style="width: 100px;" name="roomprice" min="0"
      class="form-control" value="{{roomprice}}" required>
  </div>

  <div class="form-group">
    <h5>Room Information</h5>
    <input type="string" name="roominfo" class="form-control" value="{{roominfo}}" required>
  </div>

  <div class="form-group">
    <h5>Location</h5>
    <input type="string" name="location" class="form-control" value="{{location}}" required>
  </div>

