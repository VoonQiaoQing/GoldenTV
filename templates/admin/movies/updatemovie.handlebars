<style>
  body {
    background-color: black;
  }

  h1,
  h5,
  label {
    color: gold;
  }

  div.blackblock {
    background-color: black;
    height: 25px;
  }

  .btn#query {
    background-color: black;
    color: gold;
    border: 1px solid white;
  }

  .btn#query:hover {
    background-color: grey;
    color: white;
  }
</style>
{{>navbar}}
<h1 class="display-4">Update Movie</h1>

<form method="POST" action="/prod/movie/updatemovie/{{movie.movie_uuid}}?_method=PUT" name="" enctype="multipart/form-data">

  <div class="form-group">
    <h5>Movie Image</h5>
    <input type="file" id="movieimage"
      onchange="document.getElementById('imagedisplay').src = window.URL.createObjectURL(this.files[0])"
      name="movieimage" value="{{ movie.movieimage }}">

    <img id="imagedisplay" src="/public/uploads/{{movie.movieimage}}" alt="" class="border img-thumbnail img-fluid"
      style="width: 110px; height: 160px; padding-bottom: 5px;">
  </div>

  <div class="form-group">
    <h5>Movie Name</h5>
    <input type="moviename" name="moviename" class="form-control" value="{{movie.moviename}}" required>
  </div>

  <h5>Movie Age Rating</h5>
  <br>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" id="G" value="G" name="movieagerating" {{radioCheck
      movie.movieagerating "G" }}>
    <label class="form-check-label" for="G">G</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" id="PG" value="PG" name="movieagerating" {{radioCheck
      movie.movieagerating "PG" }}>
    <label class="form-check-label" for="PG">PG</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" id="PG13" value="PG13" name="movieagerating" {{radioCheck
      movie.movieagerating "PG13" }}>
    <label class="form-check-label" for="PG13">PG13</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" id="NC13" value="NC13" name="movieagerating" {{radioCheck
      movie.movieagerating "NC13" }}>
    <label class="form-check-label" for="NC13">NC13</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" id="M18" value="M18" name="movieagerating" {{radioCheck
      movie.movieagerating "M18" }}>
    <label class="form-check-label" for="M18">M18</label>
  </div>
  <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" id="R21" value="R21" name="movieagerating" {{radioCheck
      movie.movieagerating "R21" }}>
    <label class="form-check-label" for="R21">R21</label>
  </div>

  <div class="blackblock"></div>

  <h5>Movie Duration (Mins)</h5>
  <div class="form-group">
    <input type="number" placeholder="120" step="any" style="width: 100px;" name="movieduration" min="0"
      class="form-control" value="{{movie.movieduration}}" required>
  </div>

  <h5>Start Date for Movie Release</h5>
  <div class="form-group">
    <input style="border-radius: 5px; width: 175px;" type="datetime-local" id="meeting-time" name="moviereleasedate"
      value={{ moviestartdate }} placeholder="2021-08-16T19:30" required>
  </div>

  <h5>End Date for Movie</h5>
  <div class="form-group">
    <input style="border-radius: 5px; width: 175px;" type="datetime-local" id="meeting-time" name="movieenddate"
      value={{ movieenddate }} placeholder="2021-08-16T19:30" required>
  </div>

  <div class="form-group">
    <h5>Movie Genres</h5>

    <span>
      <input type="radio" name="moviegenre" value="Horror" {{radioCheck movie.moviegenre "Horror" }}>
      <label for="Horror"> Horror </label><br>
    </span>

    <span>
      <input type="radio" name="moviegenre" value="Comedy" {{radioCheck movie.moviegenre "Comedy" }}>
      <label for="Comedy"> Comedy </label><br>
    </span>


    <span>
      <input type="radio" name="moviegenre" value="Animation" {{radioCheck movie.moviegenre "Animation" }}>
      <label for="Animation"> Animation </label><br>
    </span>

    <span>
      <input type="radio" name="moviegenre" value="Science" {{radioCheck movie.moviegenre "Science" }}>
      <label for="Science"> Science </label><br>
    </span>

    <span>
      <input type="radio" name="moviegenre" value="Romance" {{radioCheck movie.moviegenre "Romance" }}>
      <label for="Romance"> Romance </label><br>
    </span>

    <span>
      <input type="radio" name="moviegenre" value="Adventure" {{radioCheck movie.moviegenre "Adventure" }}>
      <label for="Adventure"> Adventure </label><br>
    </span>

    <span>
      <input type="radio" name="moviegenre" value="Emotional" {{radioCheck movie.moviegenre "Emotional" }}>
      <label for="Emotional"> Emotional </label><br>
    </span>

    <span>
      <input type="radio" name="moviegenre" value="Action" {{radioCheck movie.moviegenre "Action" }}>
      <label for="Action"> Action </label><br>
    </span>

  </div>

  <div class="submit">
    <input class="btn" id="query" type="submit">
  </div>

</form>

