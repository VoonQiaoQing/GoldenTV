<script>
  $(document).ready(function () {
    var i = 0;
    var imagevalue = 1;
    $("#add_row").click(function () {
      $('#addr' + i).html("<td> " + (i + 1) + "</td>" +
        '<td><div style="width: 110px;"><img id="imagedisplay' + (imagevalue) + '"src="/public/img/No-Image-PlaceHolder.png" alt="" class="border img-thumbnail img-fluid" style="width: 100px; height: 150px; padding-bottom: 5px;"><div style="padding-left: 5px;">' +
        '<input type="file" id="songimage" onchange="document.getElementById(' + "'imagedisplay" + (imagevalue) + "')" + '.src = window.URL.createObjectURL(this.files[0])" name="songimage" value="{{songimage}}" required> </div></div></td>' +

        '<td><input type="string" name="songname" placeholder="Happy" class="form-control" style="color: black; width: 110px;" value="{{songname}}" required /></td>' +

        '<td><select style="width: 100px;" name="songagerating" required class="form-control">' +
        '<option style="color: black;">PG</option>' +
        '<option style="color: black;">PG13</option>' +
        '<option style="color: black;">NC16</option>' +
        '<option style="color: black;">M18</option>' +
        '<option style="color: black;">R21</option></select></td>' +

        '<td><input type="number" min="0" max="90" placeholder="120" step="any" name="songduration" value="{{songduration}}" class="form-control" style="color: black;" required></td>' +

        '<td><select style="width: 100px;" name="songgenre" required class="form-control">' +
        '<option style="color: black;">Pop</option>' +
        '<option style="color: black;">Metal</option>' +
        '<option style="color: black;">Rock</option>' +
        '<option style="color: black;">Country</option>' +
        '<option style="color: black;">Rap</option>' +
        '<option style="color: black;">Electronic</option>' +
        '<option style="color: black;">Jazz</option>' +
        '<option style="color: black;">Folk</option></select></td>');
      $('#tab_logic').append('<tr id="addr' + (i + 1) + '"></tr>');
      i++;
      imagevalue++;
    });

    $("#delete_row").click(function () {
      if (i > 1) {
        $("#addr" + (i - 1)).html('');
        i--;
      }
    });
  });


</script>

