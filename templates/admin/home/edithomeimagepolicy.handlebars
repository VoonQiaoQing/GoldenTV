  <h5>Home Policy</h5>
  <div class="form-group">
    <input type="homepolicy" name="homepolicy" class="form-control" value="{{ homeimagepolicy.homepolicy}}" required>
  </div>

  <h5>Policy Image</h5>
  <div>
  <input type="file" id="homepolicyimage" 
  onchange="document.getElementById('imagedisplay2').src = window.URL.createObjectURL(this.files[0])" 
  name="homepolicyimage" value="{{homepolicyimage}}" required>  

  <img id="imagedisplay2" src="/public/uploads/{{ homeimagepolicy.homepolicyimage }}"
  alt="" class="border img-thumbnail img-fluid"
  style="width: 600px; height: 100px; padding-bottom: 5px;">
  </div>
  
  <div class="blackblock">
  </div>

  <div class="submit">
