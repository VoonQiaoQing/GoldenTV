<body>
  {{>navbar}}
<h1 class="display-4">Edit Home Policy and Images</h1>

<form method="post" action="/edithomeimagepolicy" name="" enctype="multipart/form-data">

  <div class="form-group">
    {{ hey }} 
    {{!-- Replace with flashmsg --}}
  <h5>Home Image</h5>
  <input type="file" id="homeimage" 
  onchange="document.getElementById('imagedisplay1').src = window.URL.createObjectURL(this.files[0])" 
  name="homeimage" value="{{homeimage}}" required>  

  <img id="imagedisplay1" src="/public/uploads/{{ homeimagepolicy.homeimage }}"
