  a#add_row.btn.btn-success.pull-left:hover,
  a#delete_row.btn.btn-danger.pull-centre:hover,
  input.btn.btn-primary.pull-right:hover {
    background-color: grey;
    color: white;
    border: 1px solid white;
  }
</style>
<script>
  $(document).ready(function () {
    var i = 0;
    var imagevalue = 1;
    $("#add_row").click(function () {
      $('#addr' + i).html(`<td> ${i + 1}</td>
                    <td>
                      <input type="text" name="questions" class="form-control" style="color: black;" value="" required>
                    </td>
                    <td>
                      <input type="text" name="answers" class="form-control" value="" style="color: black;" required>
                    </td>`);
      $('#tab_logic').append('<tr id="addr' + (i + 1) + '"></tr>');
      i++;
      imagevalue++;
    });

    $("#delete_row").click(function () {
      if(i > 1) {
        $("#addr" + (i - 1)).html('');
        i--;
      }
    });
  });


</script>
